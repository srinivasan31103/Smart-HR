# This is a template for production environment variables
# Copy this to .env.production and fill in your actual values
# NEVER commit .env.production to version control!

NODE_ENV=production
PORT=5000

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority

# Strong JWT Secrets (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=<generate-strong-secret-here>
JWT_REFRESH_SECRET=<generate-strong-secret-here>
COOKIE_SECRET=<generate-strong-secret-here>

# Face Recognition (choose one)
FACE_RECOGNITION_PROVIDER=aws_rekognition
AWS_ACCESS_KEY_ID=<your-aws-key>
AWS_SECRET_ACCESS_KEY=<your-aws-secret>
AWS_REKOGNITION_COLLECTION_ID=<your-collection-id>

# File Storage
STORAGE_PROVIDER=s3
AWS_S3_BUCKET=<your-bucket-name>

# Email
EMAIL_PROVIDER=smtp
SMTP_USER=<your-email>
SMTP_PASSWORD=<your-app-password>
EMAIL_FROM=<your-from-email>

# SMS
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=<your-sid>
TWILIO_AUTH_TOKEN=<your-token>
TWILIO_PHONE_NUMBER=<your-number>

# CORS
FRONTEND_URL=https://yourdomain.com
CORS_ORIGINS=https://yourdomain.com
